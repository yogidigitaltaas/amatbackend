{
  "name": "amat-backend",
  "description": "amat backend using nodejs, mongodb atlas",
  "version": "0.1.0",
  "main": "dist/index.js",
  "author": "Yogendra Rawat",
  "license": "MIT",
  "homepage": "https://github.com/yogidigitaltaas/amatbackend",
  "repository": {
    "type": "git",
    "url": "https://github.com/yogidigitaltaas/amatbackend.git"
  },
  "devDependencies": {
    "axios": "^0.16.2",
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "chai": "^4.1.0",
    "chai-as-promised": "^7.1.1",
    "del-cli": "^1.1.0",
    "eslint": "^4.2.0",
    "husky": "^0.14.3",
    "lint-staged": "^4.0.2",
    "mocha": "^3.4.2",
    "nodemon": "^1.11.0",
    "prettier": "^1.5.3",
    "yadda": "^1.3.0"
  },
  "dependencies": {
    "body-parser": "^1.17.2",
    "bunyan": "^1.8.10",
    "cors": "^2.8.4",
    "dotenv": "^4.0.0",
    "express": "^4.15.3",
    "lodash": "^4.17.4",
    "morgan": "^1.8.2",
    "underscore.string": "^3.3.4"
  },
  "scripts": {
    "watch": "nodemon --exec npm run watch:serve | bunyan -o short",
    "watch:serve": "babel-node --inspect src/index.js",
    "lint": "eslint src --ext .js",
    "lint:test": "eslint test --ext .js",
    "test": "mocha",
    "build": "del-cli dist && npm run lint && babel src -d dist",
    "start": "node dist/index.js | bunyan -o short",
    "format": "prettier --print-width 80 --tab-width 4 --single-quote --write 'src/**/*.js'",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "prettier --print-width 80 --tab-width 4 --single-quote --write",
      "git add"
    ]
  }
}
